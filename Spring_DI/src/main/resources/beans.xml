<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans.xsd">
       
       <bean id="person" class="com.Person.person">
       <property name="person_id" value="123"></property>
        <property name="person_name" value="abc"></property>
         <property name="person_mobile" value="123456789"></property>
         
         
       </bean>
       
       <bean id="phone" class="com.Phone.phone">
       <property name="phone_modelno" value="025"></property>
       <property name="phone_name" value="Redmi 13 Pro"></property>
       <property name="phone_storage" value="1024"></property>
       <property name="person" ref="person"></property>
       </bean>
       
       <bean id="employee" class="com.Employee.employee">
       <constructor-arg index="1"  value="xyz"></constructor-arg>
       <constructor-arg index="0" value="123"></constructor-arg>
       <constructor-arg index="2" value="45"></constructor-arg>
       </bean>
       
       <bean id="department" class="com.Department.department">
       <constructor-arg value="101"></constructor-arg>
       <constructor-arg value="IT"></constructor-arg> 
       <constructor-arg ref="employee"></constructor-arg>
       </bean>
       </beans>